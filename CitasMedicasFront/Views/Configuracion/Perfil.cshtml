@model CitasMedicasFront.Models.DTOS.UsuarioPersonalDTO
@{
    ViewBag.Title = "Perfil de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">

                    <div class="row align-items-center">
                        <!-- Foto de perfil -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <img src="@Model.ImagenPerfil" class="rounded-circle shadow" alt="Foto de perfil" width="160" height="160">
                        </div>

                        <!-- Info básica -->
                        <div class="col-md-8">
                            <h3 class="fw-bold mb-1">Nombre completo: @Model.NombreReal @Model.ApellidoPaterno @Model.ApellidoMaterno</h3>
                            <h4 class="fw-bold mb-1">Usuario: @Model.NombreUsuario</h4>
                            <p class="text-muted mb-2">Correo: @Model.Correo</p>
                            <span class="badge bg-gradient-light px-3 py-2">
                                @if (Model.RolUsuario == 2)
                                {
                                    @:Administrador
                                }
                                else if (Model.RolUsuario == 4)
                                {
                                    @:Médico
                                }
                                else if (Model.RolUsuario == 6)
                                {
                                    @:Recepcionista
                                }
                            </span>
                            <!-- Opcional: puedes mostrar la fecha de creación del perfil si la tienes -->
                            <p class="mt-3 text-secondary small">Miembro desde: @Model.FechaRegistro</p>
                        </div>
                    </div>

                    <hr class="my-5">

                    <!-- Información adicional -->
                    <div class="row gy-3">
                        <div class="col-md-6">
                            <div class="border rounded-3 p-3 bg-light">
                                <strong>Teléfono</strong>
                                <p class="mb-0 text-muted">@Model.Telefono</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded-3 p-3 bg-light">
                                <strong>Dirección</strong>
                                <p class="mb-0 text-muted">@Model.Direccion</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded-3 p-3 bg-light">
                                <strong>Nombre completo</strong>
                                <p class="mb-0 text-muted">@Model.NombreReal @Model.ApellidoPaterno @Model.ApellidoMaterno</p>
                            </div>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="mt-5 d-flex justify-content-end gap-3">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-pen me-1"></i> Editar Perfil
                        </a>
                        <a href="#" class="btn btn-outline-secondary">
                            <i class="fas fa-key me-1"></i> Cambiar Contraseña
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
