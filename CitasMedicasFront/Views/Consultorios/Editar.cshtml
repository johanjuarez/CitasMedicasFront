@{
    ViewBag.Title = "Editar Consultorio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Consultorio</h2>

@using (Html.BeginForm("Actualizar", "Consultorios", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" id="ConsultorioId" name="ConsultorioId" value="@Model.ConsultorioId" />

    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="Nombre" id="nombre" class="form-control" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Especialidad">Especialidad</label>
        <input type="text" name="Especialidad" id="especialidad" class="form-control" value="@Model.Especialidad" required />
    </div>
    <div class="form-group">
        <label for="Ubicacion">Ubicacion</label>
        <input type="text" name="Ubicacion" id="ubicacion" class="form-control" value="@Model.Ubicacion" required />
    </div>

    <input type="hidden" name="FechaUltimaModificacion" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
    <input type="hidden" name="FechaRegistro" value="@Model.FechaRegistro" />



    <button type="submit" class="btn btn-outline-success">Actualizar</button>
}

<hr />
<a href="@Url.Action("Index", "Consultorios")" class="btn btn-outline-secondary">Volver a la lista</a>
