@model IEnumerable<CitasMedicasFront.Models.Medico>

@{
    ViewBag.Title = "Médicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-user-md text-primary"></i> Gestión de Médicos</h2>
        <a href="@Url.Action("Crear", "Medicos")" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Nuevo Médico
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table id="medicosTable" class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th><i class="fas fa-stethoscope"></i> Especialidad</th>
                            <th><i class="fas fa-id-card-alt"></i> Cédula Profesional</th>
                            <th><i class="fas fa-cogs"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var medico in Model)
                        {
                            <tr>
                                <td>@medico.Especialidad</td>
                                <td>@medico.CedulaProfesional</td>
                                <td>
                                    <a href="@Url.Action("Editar", "Medicos", new { id = medico.MedicoId })" class="btn btn-warning btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Medicos", new { id = medico.MedicoId })" class="btn btn-danger btn-sm" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS + CSS -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

<!-- Font Awesome (solo si no está en el layout) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<!-- Inicializar DataTables -->
<script>
    $(document).ready(function () {
        $('#medicosTable').DataTable({
            pageLength: 5,
            language: {
                url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"
            }
        });
    });
</script>
