@{
    ViewBag.Title = "Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Layout común
}

<h2>Gestión de Personal</h2>

<!-- Enlace para agregar nuevo personal -->
<a href="@Url.Action("Crear", "Personal")" class="btn btn-outline-success">Agregar Nuevo Personal</a>

<table id="pacientesTable" class="display table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Telefono</th>
            <th>Cargo</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <!-- Aquí recorres directamente la lista de personal que está en el modelo -->
        @foreach (var personal in Model)
        {
            <tr>
                <td>@personal.Nombre</td>
                <td>@personal.ApellidoPaterno</td>
                <td>@personal.ApellidoMaterno</td>
                <td>@personal.Telefono</td>
                <td>@personal.Cargo</td>
                <td>@personal.Correo</td>
                <td>
                    <a href="@Url.Action("Editar", "Personal", new { id = personal.PersonalId })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Eliminar", "Personal", new { id = personal.PersonalId })" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Inicialización de DataTables para habilitar paginación -->
<script>
    $(document).ready(function () {
        $('#pacientesTable').DataTable({
            "pageLength": 5, // Número de registros por página
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json" // Idioma en español
            }
        });
    });
</script>
