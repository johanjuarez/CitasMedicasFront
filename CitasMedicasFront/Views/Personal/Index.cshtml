@model IEnumerable<CitasMedicasFront.Models.Personal>

@{
    ViewBag.Title = "Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-users text-primary"></i> Gestión de Personal</h2>
        <a href="@Url.Action("Crear", "Personal")" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Nuevo Personal
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table id="personalTable" class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th><i class="fas fa-user"></i> Nombre</th>
                            <th><i class="fas fa-user-tag"></i> Apellido Paterno</th>
                            <th><i class="fas fa-user-tag"></i> Apellido Materno</th>
                            <th><i class="fas fa-phone"></i> Teléfono</th>
                            <th><i class="fas fa-briefcase"></i> Cargo</th>
                            <th><i class="fas fa-envelope"></i> Correo</th>
                            <th><i class="fas fa-cogs"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var personal in Model)
                        {
                            <tr>
                                <td>@personal.Nombre</td>
                                <td>@personal.ApellidoPaterno</td>
                                <td>@personal.ApellidoMaterno</td>
                                <td>@personal.Telefono</td>
                                <td>@personal.Cargo</td>
                                <td>@personal.Correo</td>
                                <td>
                                    <a href="@Url.Action("Editar", "Personal", new { id = personal.PersonalId })" class="btn btn-warning btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Personal", new { id = personal.PersonalId })" class="btn btn-danger btn-sm" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS + CSS -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

<!-- Font Awesome (en caso que no esté en el Layout) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#personalTable').DataTable({
            pageLength: 5,
            language: {
                url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"
            }
        });
    });
</script>
