@{
    ViewBag.Title = "Roles de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-user-shield text-primary"></i> Gestión de Roles de Usuario</h2>
        <a href="@Url.Action("Crear", "Roles")" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Nuevo Rol
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table id="rolesTable" class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th><i class="fas fa-id-badge"></i> Nombre</th>
                            <th><i class="fas fa-align-left"></i> Descripción</th>
                            <th><i class="fas fa-tools"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Rol in Model)
                        {
                            <tr>
                                <td>@Rol.Nombre</td>
                                <td>@Rol.Descripcion</td>
                                <td>
                                    <a href="@Url.Action("Editar", "Roles", new { id = Rol.RolId })" class="btn btn-sm btn-warning mr-1" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Roles", new { id = Rol.RolId })" class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS + CSS -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

<!-- Font Awesome (si no está en el layout) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

<!-- Inicializar DataTables -->
<script>
    $(document).ready(function () {
        $('#rolesTable').DataTable({
            pageLength: 5,
            language: {
                url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"
            }
        });
    });
</script>
